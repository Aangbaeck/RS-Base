<RSView
    x:Class="RS_Base.Views.MainV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    MinWidth="300"
    MinHeight="300"
    AllowsTransparency="True"
    Background="{DynamicResource MaterialDesignPaper}"
    DataContext="{Binding MainVM, Source={StaticResource Locator}}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Style="{StaticResource WindowStyle}"
    TaskbarIcon="Helicopter"
    TextElement.FontSize="16"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TitlebarIcon="Helicopter">
    <RSView.Resources>
        <sys:String x:Key="N">RS_Base.Views.Localization.Main</sys:String>
    </RSView.Resources>
    <Grid>
        <Button Padding="10 0" Margin="10" Command="{Binding OpenLogFile}" Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom">

            <materialDesign:PackIcon Kind="DogSide" />
        </Button>

    </Grid>
</RSView>
