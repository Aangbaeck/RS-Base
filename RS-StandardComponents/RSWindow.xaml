<Window
    x:Class="RS_StandardComponents.RSWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RS_StandardComponents"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    
    
    
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    >

    <Grid x:Name="MainGrid">
        <local:TitlebarUserCtrl
            x:Name="Titlebar"
            Title="Untitled"
            Panel.ZIndex="1"
            x:FieldModifier="public"
            BoundWindow="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
            CheckBeforeClose="False"
            EnableClosable="True"
            EnableMaximize="True"
            EnableMinimize="True"
            EnablePinMode="False"
            Icon="AcademicCap" />
    </Grid>


</Window>






